{
  "name": "kickstart-static",
  "version": "0.0.1",
  "description": "Kickstarter for a new static site build",
  "main": "index.js",
  "repository": "https://github.com/lmarzy/kickstart-static.git",
  "author": "Lee Marsden",
  "license": "MIT",
  "ava": {
    "require": ["babel-register"],
    "babel": "inherit"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "jekyll": "jekyll build --destination dist",
    "jekyll:incremental": "jekyll build --incremental --destination dist",
    "stylelint": "stylelint assets/styles/**/**/*.scss",
    "sass": "node-sass --source-map=true assets/css/main.scss -o dist/assets",
    "postcss": "postcss -r dist/assets/*.css",
    "build:css": "yarn run sass && yarn run postcss",
    "ava": "ava",
    "js": "webpack",
    "images": "imagemin assets/img/* -o dist/assets/img",
    "htmlMin": "html-minifier --input-dir dist --output-dir dist --collapse-whitespace --file-ext html",
    "postcss:csso": "postcss -u postcss-csso -r dist/assets/*.css --no-map",
    "uglify": "uglifyjs dist/assets/*.js -m -c -o dist/assets/*.js",
    "watch:html": "onchange '_includes/*.html' '_layouts/*.html' '_pages/*.html' '_posts/**/**/*.md' -- yarn run jekyll:incremental",
    "watch:css": "onchange 'assets/css/**/*.scss' -- yarn run build:css",
    "watch:js": "onchange 'assets/js/**/*.js' -- yarn run js",
    "build": "yarn run clean && parallelshell 'yarn run jekyll' 'yarn run stylelint' 'yarn run build:css' 'yarn run js' 'yarn run images'",
    "serve": "browser-sync start --server 'dist' --files 'dist/*.html, dist/assets/*.css, dist/assets/*.js, dist/assets/img/*'",
    "dev": "yarn run build && parallelshell 'yarn run serve' 'yarn run watch:html' 'yarn run watch:css' 'yarn run watch:js'",
    "prod": "yarn run build && parallelshell 'yarn run htmlMin' 'yarn run postcss:csso' 'yarn run uglify'"
  },
  "devDependencies": {
    "autoprefixer": "^7.2.2",
    "ava": "^0.24.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "browser-sync": "^2.18.13",
    "css-mqpacker": "^6.0.1",
    "eslint": "^4.13.0",
    "eslint-loader": "^1.9.0",
    "html-minifier": "^3.5.7",
    "imagemin-cli": "^3.0.0",
    "node-sass": "^4.7.2",
    "onchange": "^3.3.0",
    "parallelshell": "^3.0.2",
    "postcss-cli": "^4.1.1",
    "postcss-csso": "^3.0.0",
    "postcss-focus": "^3.0.0",
    "postcss-pxtorem": "^4.0.1",
    "postcss-vr": "^3.0.1",
    "stylelint": "^8.3.1",
    "stylelint-config-standard": "^18.0.0",
    "uglify-js": "^3.2.2",
    "webpack": "^3.10.0"
  }
}
