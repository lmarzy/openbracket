{
  "extends": "stylelint-config-standard",
  "rules": {
    "at-rule-no-unknown": [ true, {
      "ignoreAtRules": [
        "include",
        "mixin",
        "function",
        "return",
        "if",
        "warn",
        "error",
        "else",
        "for",
        "each",
        "debug"
      ]
    }],
    "indentation": 2,
    "declaration-empty-line-before": "never"
  }
}